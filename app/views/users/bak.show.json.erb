{
  "_id" : "<%= @user.id %>",
  "full_name" : "<%= @user.full_name %>",
  "login" : "<%= @user.login %>",
  "email_work": "<%= @user.email_work %>",
  "persistence_token": "<%= @user.persistence_token %>",
  "single_access_token": "<%= @user.single_access_token%>",
  "perishable_token": "<%= @user.perishable_token%>",
  "feed_accounts": [
    <% @user.feed_accounts.each do |column| %>
      {
        "_id": "<%= column.id %>",
        "name": "<%= column.title %>",
        "category": "<%= column.category %>",
        "window_type": "<%= column.window_type%>",
        "position": "<%= column.position %>",
        <% 
          if column.isKeyword? 
            kc = column.keyword_column
        %>
          "keyword_column": { 
            "_id": "<%= kc.id %>",
            "keyword": "<%= kc.keyword %>",
            "follower": "<%= kc.follower %>",
            "is_aggregate": "<%= kc.is_aggregate %>"
          },
        <% end %>
        <% if column.feed_token.present? 
             ft = column.feed_token
        %>
          "feed_token" : {
            "_id": "<%= ft.id %>",
            "token": "<%= ft.token %>",
            "secret": "<%= ft.secret %>",
            "username": "<%= ft.username %>"
          },
        <% end %>
        "user_feeds": [ 
          <% column.user_feeds.each do |uf| %>
           {
        	  "_id": "<%= uf.id %>",
        	  "title": "<%= uf.title.to_s %>",
        	  "feed_info": {
        	    <% fi = uf.feedinfo %>
        	    "_id": "<%= fi.id %>",
        	    "title": "<%= fi.title %>",
        	    "address": "<%= fi.address %>",
        	    "category": "<%= fi.category %>",
        	    "follower": "<%= fi.follower.to_i %>"
        	  }
        	 },
        	<% end %>
        ]
      },
    <% end %>
  ]
}
